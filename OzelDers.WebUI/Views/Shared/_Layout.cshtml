<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - OzelDers</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/OzelDers.WebUI.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.1/css/all.min.css" integrity="sha512-MV7K8+y+gLIBoVD59lQIYicR65iaqukzvf/nwasF0nqhPay5w/9lJmVM2hMDcnK1OnMGCdVK+iQrJ7lzPJQd1w==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>

<body>
    <header class="sticky-top">
        <partial name="_NavBar" />
    </header>


    <div class="container-fluid">
        <main role="main">
            @RenderBody()

        </main>
    </div>

    <footer class="bg-light text-lg-start">
        <hr class="m-0" />
        <div class="py-4 text-center">


            <div class="text-center py-4 align-items-center">
                <p>Follow OzelDers on social media</p>
                <a href="https://www.youtube.com/"
                   class="btn btn-dark m-1"
                   role="button"
                   rel="nofollow"
                   target="_blank">
                    <i class="fab fa-youtube"></i>
                </a>
                <a href="https://www.facebook.com/"
                   class="btn btn-dark m-1"
                   role="button"
                   rel="nofollow"
                   target="_blank">
                    <i class="fab fa-facebook-f"></i>
                </a>
                <a href="https://twitter.com/"
                   class="btn btn-dark m-1"
                   role="button"
                   rel="nofollow"
                   target="_blank">
                    <i class="fab fa-twitter"></i>
                </a>
            </div>

            <div class="text-center p-3">
                &copy; 2022 - OzelDers - <a class="text-decoration-none" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </div>
      
    </footer>

    

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)

    @RenderSection("Script", false)

</body>


</html>
